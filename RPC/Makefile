
# This is a template Makefile generated by rpcgen

# Parameters

CLIENT = word_counter_client
SERVER = word_counter_server

SOURCES_CLNT.c =
SOURCES_CLNT.h =
SOURCES_SVC.c =
SOURCES_SVC.h =
SOURCES.x = word_counter.x

TARGETS_SVC.c = word_counter_svc.c word_counter_server.c word_counter_xdr.c
TARGETS_CLNT.c = word_counter_clnt.c word_counter_client.c word_counter_xdr.c
TARGETS = word_counter.h word_counter_xdr.c word_counter_clnt.c word_counter_svc.c word_counter_client.c word_counter_server.c

OBJECTS_CLNT = $(SOURCES_CLNT.c:%.c=%.o) $(TARGETS_CLNT.c:%.c=%.o)
OBJECTS_SVC = $(SOURCES_SVC.c:%.c=%.o) $(TARGETS_SVC.c:%.c=%.o)
# Compiler flags

CFLAGS += -g -lm -pthread -I/usr/include/tirpc/ -D MAXDATA=$(MAXDATA)
LDLIBS += -lnsl -ltirpc
RPCGENFLAGS = -b

# Targets

all : $(CLIENT) $(SERVER)

$(TARGETS) : $(SOURCES.x)
	rpcgen $(RPCGENFLAGS) $(SOURCES.x)

$(OBJECTS_CLNT) : $(SOURCES_CLNT.c) $(SOURCES_CLNT.h) $(TARGETS_CLNT.c)

$(OBJECTS_SVC) : $(SOURCES_SVC.c) $(SOURCES_SVC.h) $(TARGETS_SVC.c)

$(CLIENT) : $(OBJECTS_CLNT)
	$(LINK.c) -o $(CLIENT) $(OBJECTS_CLNT) $(LDLIBS)

$(SERVER) : $(OBJECTS_SVC)
	$(LINK.c) -o $(SERVER) $(OBJECTS_SVC) $(LDLIBS)

 clean:
	 $(RM) core $(OBJECTS_CLNT) $(OBJECTS_SVC) $(CLIENT) $(SERVER)

